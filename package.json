{
  "name": "little-hero-books",
  "version": "0.1.0",
  "description": "Personalized children's books where every child is the hero of their own magical adventure story",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "dev": "cd renderer && npm run dev",
    "dev:amazon": "cd amazon && npm run dev",
    "dev:templates": "cd templates && npm run dev",
    "dev:pod": "cd pod && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:amazon\" \"npm run dev:templates\" \"npm run dev:pod\"",
    "build": "cd renderer && npm run build",
    "test": "cd renderer && npm test",
    "start": "cd renderer && npm start",
    "install-deps": "cd renderer && npm install && npx playwright install && cd ../amazon && npm install && cd ../templates && npm install && cd ../pod && npm install",
    "test:amazon": "curl http://localhost:4000/health",
    "test:renderer": "curl http://localhost:8787/health",
    "test:pod": "cd pod && npm test"
  },
  "keywords": [
    "personalized-books",
    "childrens-books",
    "ai-generated-content",
    "print-on-demand",
    "amazon-custom",
    "n8n-automation",
    "typescript",
    "nodejs",
    "pdf-generation",
    "storytelling"
  ],
  "author": "Little Hero Books",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amoeboar/little-hero-books.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "puppeteer": "^24.24.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.908.0",
    "axios": "^1.12.2",
    "node-fetch": "^3.3.2"
  }
}
