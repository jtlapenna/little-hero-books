# Little Hero Books - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# AMAZON SP-API CONFIGURATION
# ==============================================
AMZ_APP_CLIENT_ID=your_amazon_sp_api_client_id
AMZ_APP_CLIENT_SECRET=your_amazon_sp_api_client_secret
AMZ_REFRESH_TOKEN=your_amazon_refresh_token
AMZ_SELLER_ID=your_amazon_seller_id
AMZ_REGION=na
AMZ_MARKETPLACE_ID=ATVPDKIKX0DER

# ==============================================
# PRINT-ON-DEMAND PROVIDER
# ==============================================
POD_PROVIDER=lulu
POD_API_KEY=your_pod_api_key
POD_BASE_URL=https://api.lulu.com/v1
POD_WEBHOOK_SECRET=your_pod_webhook_secret

# Alternative POD providers (uncomment to use):
# POD_PROVIDER=onpress
# POD_BASE_URL=https://api.onpress.com/v1

# ==============================================
# FILE STORAGE (PDFs, Images)
# ==============================================
STORAGE_PROVIDER=cloudflare_r2
R2_BUCKET=little-hero-books-assets
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://assets.littleherobooks.com

# Alternative storage (uncomment to use):
# STORAGE_PROVIDER=aws_s3
# S3_BUCKET=little-hero-books-assets
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ==============================================
# AI SERVICES
# ==============================================
LLM_PROVIDER=openai
LLM_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your_openai_api_key
LLM_MODEL=gpt-4o-mini

# Alternative LLM providers:
# LLM_PROVIDER=anthropic
# LLM_URL=https://api.anthropic.com/v1/messages
# LLM_API_KEY=your_anthropic_api_key
# LLM_MODEL=claude-3-haiku-20240307

IMAGE_GEN_PROVIDER=dalle
IMAGE_GEN_URL=https://api.openai.com/v1/images/generations
IMAGE_GEN_API_KEY=your_openai_api_key
IMAGE_GEN_STYLE=watercolor children's book illustration

# ==============================================
# N8N AUTOMATION
# ==============================================
N8N_BASE_URL=https://your-n8n-instance.com
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your_n8n_api_key

# ==============================================
# NOTIFICATIONS & MONITORING
# ==============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
ALERT_EMAIL=alerts@littleherobooks.com
MONITORING_WEBHOOK=https://your-monitoring-service.com/alerts

# ==============================================
# RENDERER SERVICE
# ==============================================
RENDERER_PORT=8787
RENDERER_BASE_URL=http://localhost:8787
NODE_ENV=development

# ==============================================
# BOOK SPECIFICATIONS
# ==============================================
BOOK_TRIM_SIZE=8x10
BOOK_PAGES=16
BOOK_BINDING=softcover
BOOK_PAPER=premium_color
BOOK_BLEED=0.125

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
COMPANY_NAME=Little Hero Books
BRAND_EMAIL=hello@littleherobooks.com
BRAND_PHONE=+1-555-LITTLE-HERO
RETURN_ADDRESS_NAME=Little Hero Books
RETURN_ADDRESS_LINE1=123 Story Lane
RETURN_ADDRESS_CITY=Book City
RETURN_ADDRESS_STATE=CA
RETURN_ADDRESS_ZIP=90210
RETURN_ADDRESS_COUNTRY=US

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_TEST_MODE=false
MOCK_POD_ORDERS=false
